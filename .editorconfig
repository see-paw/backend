# Indica que este é o ficheiro base
root = true

# Aplica estas regras a todos os ficheiros C#
[*.cs]

# --- Estilo básico ---
indent_style = space
indent_size = 4
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# --- Nomenclatura ---
dotnet_naming_rule.private_fields_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_camel_case.style = camel_case_style
dotnet_naming_rule.private_fields_should_be_camel_case.severity = suggestion
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_fields.required_modifiers = field
dotnet_naming_style.camel_case_style.capitalization = camel_case

# --- Preferências de código ---
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion
csharp_style_namespace_declarations = file_scoped:suggestion

# --- Organização de usings ---
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# --- Regras de limpeza automática ---
dotnet_diagnostic.IDE0005.severity = suggestion
